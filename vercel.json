{
    "version": 2,
    "builds": [
      {
        "src": "manage.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "50mb" }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "headers": { "cache-control": "s-maxage=31536000, immutable" },
        "dest": "/static/$1"
      },
      {
        "src": "/media/(.*)",
        "headers": { "cache-control": "s-maxage=31536000, immutable" },
        "dest": "/media/$1"
      },
      {
        "src": "/(.*)",
        "dest": "manage.py"
      }
    ],
    "env": {
      "DEBUG": "false",
      "SECRET_KEY": "@secret_key",
      "DATABASE_URL": "@database_url"
    },
    "build": {
      "env": {
        "PROJECT_NAME": "eLMS"
      }
    }
  }
  